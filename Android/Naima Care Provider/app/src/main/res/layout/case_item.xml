<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8">

    <LinearLayout
        android:id="@+id/case_item"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:layout_margin="15dp"
        android:background="@drawable/case_list_item_background"
        android:gravity="center_vertical"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="2dp"
            android:layout_marginLeft="20dp"
            android:duplicateParentState="true">
            <TextView
                android:id="@+id/patient_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:duplicateParentState="true"
                android:text="Patient"/>
            <TextView
                android:id="@+id/patient_name"
                android:layout_toRightOf="@id/patient_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="28sp"
                android:textStyle="bold"
                android:textColor="#03a9f4"
                android:layout_marginLeft="10dp"
                android:text="Rambai"/>
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="2dp"
            android:layout_marginLeft="20dp">
            <TextView
                android:id="@+id/doctor_label"
                android:layout_width="100dp"
                android:layout_height="wrap_content"
                android:gravity="right"
                android:layout_centerVertical="true"
                android:textSize="20sp"
                android:text="Doctor"/>
            <TextView
                android:id="@+id/doctor_name"
                android:layout_toRightOf="@id/doctor_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="22sp"
                android:textColor="#03a9f4"
                android:textStyle="bold"
                android:layout_marginLeft="10dp"
                android:text="Vikram Patel"/>
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>